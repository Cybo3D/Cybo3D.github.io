---
export interface Props {
  title: string;
  about: string;
  imgsrc: string;
  imglink: string;
}
const {title} = Astro.props;
const {about} = Astro.props;
const {imgsrc} = Astro.props;
const {imglink} = Astro.props;
import "../styles/global.css"
---

<h2 class="title">{title}</h2>
<a href={imglink}>
  <div class="banner-container">
    <img class='banner' src={imgsrc} width="492" height="277">
    <p class="about">{about}</p>
  </div>
</a>

<style>
  .about {
    word-wrap: break-word;
    max-width: 520px; /* reduce max-width to make text narrower */
    float: left;
    font-size: 17px;
  }
  
  .banner-container {
    display: flex;
    flex-direction: column;
    justify-content: flex-start; /* align items to the left */
    align-items: flex-start;
    padding-bottom: 20px;
  }
</style>