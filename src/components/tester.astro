---
export interface Props {
  title: string;
  about: string;
  imgsrc: string;
}
const {title} = Astro.props;
const {about} = Astro.props;
const {imgsrc} = Astro.props;
import "../styles/global.css"
---

<h2 class="title">{title}</h2>
<img style="-webkit-border-radius: 30px; object-fit: scale-down; max-width: 100%; padding: 8px" src={imgsrc} width="640" height="360">
<p class="about">{about}</p>